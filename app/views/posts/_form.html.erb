<%= form_for @post do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content %>
  <%= f.text_area :content %>
</p>

<p>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
</p>

<p>
  <%= f.fields_for :categories do |categories_fields| %>
   <%= categories_fields.label :name, "Category" %>
   <%= categories_fields.text_field :name %>
 <% end %>
</p>

<%= f.submit %>
<% end %>
